{
  "name": "imcat-ui",
  "version": "1.0.1",
  "description": "Lightweight, zero-build, ES6+ JavaScript web framework with dynamic module loading and integrated SPA routing",
  "type": "module",
  "main": "dist/imcat-ui.js",
  "module": "dist/imcat-ui.js",
  "style": "dist/imcat-ui.css",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "set NODE_ENV=production && rollup -c && npm run build:css && npm run copy:fonts && npm run copy:module-css",
    "build:core": "rollup -c --environment BUILD:core",
    "build:modules": "rollup -c --environment BUILD:modules",
    "build:css": "sass src/styles/imcat-ui.scss dist/imcat-ui.css --style compressed --no-source-map",
    "build:css:min": "sass src/styles/imcat-ui.scss dist/imcat-ui.min.css --style compressed",
    "copy:fonts": "node scripts/copy-fonts.js",
    "copy:module-css": "node scripts/copy-module-css.js",
    "minify": "terser dist/imcat-ui.js -o dist/imcat-ui.min.js --compress --mangle",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "serve": "http-server . -p 3000 -o",
    "docs": "jsdoc -c jsdoc.json",
    "docs:clean": "rimraf docs/jsdoc",
    "docs:serve": "http-server docs/jsdoc -p 8080 -o",
    "release": "npm run build && node scripts/create-release.cjs",
    "release:only": "node scripts/create-release.cjs"
  },
  "keywords": [
    "framework",
    "spa",
    "zero-build",
    "lightweight",
    "es6",
    "dynamic-loading",
    "xss-protection"
  ],
  "author": "IMCAT Team",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/ui": "^1.0.0",
    "archiver": "^6.0.2",
    "docdash": "^2.0.2",
    "eslint": "^8.55.0",
    "gzip-size-cli": "^5.1.0",
    "http-server": "^14.1.1",
    "jsdoc": "^4.0.2",
    "jsdom": "^23.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.0",
    "rollup-plugin-scss": "^4.0.0",
    "sass": "^1.69.5",
    "terser": "^5.26.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
